<script type="text/javascript">
    $(document).ready(function () {
        $('#isValidate').validate();
    });
</script>

@Ajax.BeginForm("Insert", "Partner", new AjaxOptions() { UpdateTargetId = "result" },new { @id="isValidate"}){
<div id="result"></div>
<div class="modal-dialog">
        <div class="modal-content"  style="float: left;">
            <div class="modal-header"  style="float: left;width: 96.5%;">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Thông tin</h4>
            </div>
            <div class="modal-body" style="float: left">
                <div style="float: left; width: 80%;margin:0 auto">
                    <fieldset>
                        <legend>Thêm người dùng</legend>
                        <div class="sub">
                            <div class="editor-label">
                                <label>Quyền sử dụng:</label>
                            </div>
                            <div class="editor-field">
                                <select name="cbCategoryID" id="cbCategory">
                                    <option value="1">Administrator</option>
                                    <option value="2" selected="selected">Partner</option>
                                </select>
                            </div>
                        </div>
                        <div class="sub">
                            <div class="editor-label">
                                <label for="txtTitle">Tên đăng nhập:</label>
                            </div>
                            <div class="editor-field">
                                <input type="text" name="account.username" class="required text ui-widget-content ui-corner-all">
                            </div>
                        </div>
                        <div class="sub">
                            <div class="editor-label">
                                <label for="txtTitle">Mật khẩu:</label>
                            </div>
                            <div class="editor-field">
                                <input type="password" name="txtTitle" id="txtTitle" class="text ui-widget-content ui-corner-all">
                            </div>
                        </div>
                        <div class="sub">
                            <div class="editor-label">
                                <label for="txtTitle">Email:</label>
                            </div>
                            <div class="editor-field">
                                <input type="text" name="email" id="txtTitle" class="text ui-widget-content ui-corner-all">
                            </div>
                        </div>
                        <div class="sub">
                            <div class="editor-label">
                                <label for="txtTitle">Họ tên:</label>
                            </div>
                            <div class="editor-field">
                                <input type="text" name="txtTitle" id="txtTitle" class="text ui-widget-content ui-corner-all">
                            </div>
                        </div>
                        <div class="sub">
                            <div class="editor-label">
                                <label for="txtTitle">Công ty:</label>
                            </div>
                            <div class="editor-field">
                                <input type="text" name="txtTitle" id="txtTitle" class="text ui-widget-content ui-corner-all">
                            </div>
                        </div>
                        <div class="sub">
                            <div class="editor-label">
                                <label for="txtTitle">Số điện thoại:</label>
                            </div>
                            <div class="editor-field">
                                <input type="text" name="txtTitle" id="txtTitle" class="text ui-widget-content ui-corner-all">
                            </div>
                        </div>
                        <div class="sub">
                            <div class="editor-label">
                                <label>Trạng thái:</label>
                            </div>
                            <div class="editor-field">
                                <select name="cbCategoryID" id="cbCategory">
                                    <option value="1">Đang hoạt động</option>
                                    <option value="2">Ngừng hoạt động</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </div>   
            </div>
            <div class="modal-footer" style="float: left;width: 95.5%;">
                <input type="submit" class="button add" value="Thêm mới" />
                <button type="button" class="button" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
}