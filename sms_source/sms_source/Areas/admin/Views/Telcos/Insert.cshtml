@model sms_source.Areas.admin.Models.telcos
<script type="text/javascript">
    $(document).ready(function () {
        $('#validateForm').validate();
    });
</script>

@using (Ajax.BeginForm("Insert", "Telcos", new AjaxOptions() { UpdateTargetId = "result" }, new { @id = "validateForm" }))
{
    <div id="result"></div>
    <div class="modal-dialog">
        <div class="modal-content" style="float: left;">
            <div class="modal-header" style="float: left; width: 96.5%;">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Thêm nhà mạng</h4>
            </div>
            <div class="modal-body" style="float: left">

                <p style="color: gray; font-style: italic; padding-left: 40px">
                    Chú ý những phần đánh dấu ( <span style="color: red">*</span> ) sao bắt buộc phải nhập đầy đủ
                </p>
                <legend>Thông tin nhà mạng</legend>
                <div style="width: 90%; margin: 0 auto;">
                    <div class="sub">
                        <div class="editor-label">
                            <label for="txtTitle">Tên nhà mạng:</label>
                        </div>
                        <div class="editor-field">
                            <input type="text" name="telcos_name" class="required text ui-widget-content ui-corner-all">
                            <label for="telcos_name" generated="true" class="error"
                                style="display: inline;">
                                * Nhập tên nhà mạng</label>
                        </div>
                    </div>
                    <div class="sub">
                        <div class="editor-label">
                            <label for="txtTitle">Mô tả:</label>
                        </div>
                        <div class="editor-field">
                            <textarea name="info" class="text ui-widget-content ui-corner-all" style="width: 400px"></textarea>
                        </div>
                    </div>
                </div>


            </div>

            <div class="modal-footer" style="float: left; width: 95.5%;">
                <input type="submit" class="button add" value="Thêm mới" />
                <button type="button" class="button" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
}